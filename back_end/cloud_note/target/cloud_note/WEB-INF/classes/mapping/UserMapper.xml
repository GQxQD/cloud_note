<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gqxqd.dao.UserDao">
    <select id="get" parameterType="int" resultType="cn.gqxqd.model.User">
        SELECT * FROM cn_user WHERE cn_user_id = #{cn_user_id}
    </select>

    <select id="findUserByName" parameterType="string" resultType="cn.gqxqd.model.User">
        SELECT * FROM cn_user WHERE cn_user_name = #{cn_user_name}
    </select>

    <insert id="save" parameterType="cn.gqxqd.model.User" useGeneratedKeys="true" keyProperty="cn_user_id">
        INSERT INTO cn_user(cn_user_name,cn_user_password) VALUES (#{cn_user_name},#{cn_user_password})
    </insert>

    <update id="updateToken" parameterType="cn.gqxqd.model.User">
        UPDATE cn_user SET cn_user_token = #{cn_user_token} WHERE cn_user_id = #{cn_user_id}
    </update>

    <update id="updatePassword" parameterType="cn.gqxqd.model.User">
        UPDATE cn_user SET cn_user_password = #{cn_user_password} WHERE cn_user_id = #{cn_user_id}
    </update>
</mapper>